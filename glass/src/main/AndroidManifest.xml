<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smartwatch.context.project">

    <!-- For free-style voice trigger and voice menus. -->
    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT"/>
    <uses-permission android:name="android.permission.CAMERA" />


    <application

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger" />
        </activity>

        <activity android:name=".activities.WiFiBleActivity"
            android:exported="true"
            />

        <activity android:name=".activities.GlassLocalizationActivity"
            android:exported="true"
            />

        <activity android:name=".activities.QRCodeActivity"
            android:exported="true"
            />

        <activity android:name=".qr.barcode.scan.CaptureActivity"
            android:exported="true"
            />

        <activity android:name=".qr.qrlens.MainActivity"
            android:exported="true"
            />

        <service
            android:name="smartwatch.context.common.helper.BluetoothData"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.project.BLUETOOTHSERVICE" />
            </intent-filter>
        </service>

    </application>

</manifest>
